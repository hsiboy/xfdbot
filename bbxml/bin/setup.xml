    <dotsConfig label="G" height="8" width="7" colors="1"/>
    <dotsConfig label="Y" height="8" width="7" colors="1"/>
    <dotsConfig label="T" height="16" width="74" colors="3"/>
     
    <stringConfig label="P" size="512"/>
    <stringConfig label="B" size="512"/>
    <stringConfig label="C" size="512"/>
    <stringConfig label="W" size="512"/>
  </memoryConfig>

<!-- set a timeout message, to be displayed if sign loses connection to PC -->
<!-- timeout is 1/10 seconds. -->

<timeoutMessage timeout="3000" message="No PC Connection!"/>

<timeFormat format="24-hour-blinking-colon"/>

<sequence labels="PBPCPTPW" mode="useTimeSchedule"/> 
<!-- <sequence labels="T"/> -->

  <text label="P"><callString label="P"/><callDots label="T"/></text>
  <text label="B"><green/><fullHeightFancy/><mode display="rotate"/><speed5/><callString label="B"/></text>
  <text label="C"><green/><fullHeightFancy/><mode display="rotate"/><speed5/><callString label="C"/></text>
  <text label="T"><green/><mode display="hold"/><fullHeightFancy/><noHold/><time/></text>
  <text label="W"><green/><fullHeightFancy/><mode display="rotate"/><speed5/><callString label="W"/><callDots label="A"/></text>
  


